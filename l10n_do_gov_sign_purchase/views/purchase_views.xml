<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="purchase_order_form_inherited" model="ir.ui.view">
        <field name="name">purchase.order.form.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="id" position="after">
                <field name="public_access_id" invisible="1"/>
            </field>
            <button name="print_quotation" position="after">
                <button name="action_signing_request_wizard" type="object" string="Request Approval"
                        attrs="{'invisible': [('public_access_id', '!=', False)]}"/>
            </button>
            <page name="products" position="after">
                <page string="Signing requests" name="signing_request"
                      attrs="{'invisible': [('public_access_id', '=', False)]}">
                    <button name="update_signing_request_status" type="object" string="Update"/>
                    <button name="finalize_signing_request" type="object" string="Finalize"/>
                    <field name="l10n_do_gov_signing_request_ids">
                        <tree editable="bottom">
                            <field name="user_id"/>
                            <field name="action"/>
                            <field name="action_date"/>
                            <field name="status"/>
                            <field name="comment"/>
                            <field name="purchase_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>

</odoo>
