<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="purchase_order_form_inherited" model="ir.ui.view">
        <field name="name">purchase.order.form.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="print_quotation" position="after">
                <button name="action_signing_request_wizard" type="object" string="Request Approval"/>
            </button>
            <page name="products" position="after">
                <page string="Signing requests" name="signing_request">
                    <field name="l10n_do_gov_signing_request_ids">
                        <tree editable="bottom">
                            <field name="user_id"/>
                            <field name="action"/>
                            <field name="status"/>
                            <field name="comment"/>
                            <field name="purchase_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>

</odoo>
