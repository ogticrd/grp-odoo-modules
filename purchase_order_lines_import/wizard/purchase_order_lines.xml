<?xml version="1.0" ?>
<odoo>

    <record id="action_import_order_lines" model="ir.actions.act_window">
        <field name="name">Import Order Lines</field>
        <field name="res_model">purchase.order.lines.import</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="purchase_order_lines_import_view" model="ir.ui.view">
        <field name="name">Import Purchase Order Lines</field>
        <field name="model">purchase.order.lines.import</field>
        <field name="arch" type="xml">
            <form string="Import Order Lines">
                <h2>Select a Order Lines file to import</h2>

                <ul id="order_lines_format">
                    <li>Import Format (xlsx)</li>
                </ul>

                <field name="data_file" filename="filename"
                       placeholder="Choose a file to import..."/>
                <field name="filename" invisible="1"/>
                <footer>
                    <button name="import_file" string="_Import" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
